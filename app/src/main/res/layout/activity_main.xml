<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.course.lec2.MainActivity">




    <Button
        android:id="@+id/btnRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="#f00"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="RED" />

    <Button
        android:id="@+id/btnGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRed"
        android:layout_toRightOf="@id/btnRed"
        android:layout_marginLeft="60dp"
        android:background="#0f0"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="GREEN" />

    <Button
        android:id="@+id/btnBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnGreen"
        android:layout_below="@+id/btnGreen"
        android:layout_marginLeft="60dp"
        android:background="#00f"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="BLUE" />

    <Button
        android:id="@+id/btnCyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGreen"
        android:layout_alignStart="@+id/btnGreen"
        android:layout_below="@+id/btnBlue"
        android:background="#0ff"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="CYAN" />

    <Button
        android:id="@+id/btnMagenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnRed"
        android:layout_alignRight="@+id/btnRed"
        android:layout_below="@+id/btnCyan"
        android:background="#f0f"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="MAGENTA" />

    <Button
        android:id="@+id/btnYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCyan"
        android:layout_alignStart="@+id/btnCyan"
        android:layout_below="@+id/btnMagenta"
        android:background="#ff0"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="YELLOW" />

    <Button
        android:id="@+id/btnBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBlue"
        android:layout_alignStart="@+id/btnBlue"
        android:layout_below="@+id/btnYellow"
        android:textColor="#fff"
        android:background="#000"
        android:elevation="3dp"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        android:text="BLACK" />
</RelativeLayout>
